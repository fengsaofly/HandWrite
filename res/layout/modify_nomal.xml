<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" 
    android:background="@color/TextColorWhite">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/nav_backing_shadow" >

        <TextView   android:clickable="true" android:onClick="myOnclick"  android:id="@+id/modify_back" android:gravity="center" android:paddingBottom="5dp" android:paddingRight="7dp" style="@style/left_back_TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="返回" android:visibility="visible" />
		<TextView
            android:id="@+id/modifyNomal_title"
          	android:textColor="#000000"
            
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
           android:layout_marginBottom="3dp"
            android:layout_height="30dp"
           android:layout_width="50dp"
         android:layout_centerVertical="true"
         android:gravity="center"
         android:textStyle="bold"
             />
         <TextView
            android:id="@+id/modify_save"
             android:layout_width="40dp"
             android:layout_height="25dp"
             android:layout_marginRight="5.0dip"
            android:gravity="center"
             android:background="@anim/public_goto_bg"
         android:layout_marginBottom="12dp"
         android:layout_marginTop="5dp"
             android:onClick="myOnclick"
             
             android:text="保存"
             android:clickable="true"
             android:textColor="#ffffffff" 
             android:layout_gravity="right"/>

    </FrameLayout>

    <EditText 
        android:id="@+id/modifyNomal_value"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="left"
         android:text=""
         android:textSize="25sp"
         android:layout_marginLeft="20dp"
        />
    
    <TextView 
        android:id="@+id/modifyNomal_desc"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="left"
        android:text="123"
         android:layout_marginLeft="20dp"
        android:textSize="20sp"
        />
  

    
    
  

</LinearLayout>