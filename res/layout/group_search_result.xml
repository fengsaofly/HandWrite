<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFF4" >
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@color/TextColorWhite">
       <!--  <ImageView android:src="@drawable/friend_icon_sample" android:layout_height="50dp" android:layout_width="50dp"/>
        < -->

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/friend_item" />

    </RelativeLayout>
	
    <LinearLayout android:orientation="vertical" android:layout_marginTop="20dp" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:background="@color/TextColorWhite">
        <RelativeLayout  android:gravity="center_vertical" android:padding="20dp" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">

	        <TextView android:id="@id/group_name" android:gravity="left" style="@style/text_style_large" android:textColor="@color/TextColorBlack" android:layout_width="100dp" android:layout_height="wrap_content" android:text="群名称"    android:layout_centerVertical="true" />
	        <TextView android:id="@id/group_name_val"  android:text="13544412"  style="@style/text_style_large_gray" android:layout_toRightOf="@id/group_name" android:layout_width="wrap_content"  android:layout_height="wrap_content" />
	        
	    </RelativeLayout>
	    <ImageView android:background="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	    <RelativeLayout  android:gravity="center_vertical" android:padding="20dp" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">

	        <TextView android:id="@id/group_owner" style="@style/text_style_large" android:gravity="left" android:layout_width="100dp" android:layout_height="wrap_content" android:text="群主"    android:layout_centerVertical="true"      />
	        <TextView android:id="@id/group_owner_val"  android:text="路易斯飞哥" style="@style/text_style_large_gray" android:layout_toRightOf="@id/group_owner" android:layout_width="wrap_content"  android:layout_height="wrap_content" />
	        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"  android:src="@drawable/triangle" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
	    </RelativeLayout>
	    <ImageView android:background="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	    <RelativeLayout  android:gravity="center_vertical" android:padding="20dp" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">

	        <TextView android:id="@id/tag_sign" style="@style/text_style_large" android:gravity="left" android:layout_width="100dp" android:layout_height="wrap_content" android:text="群公告"    android:layout_centerVertical="true"      />
	        <TextView android:id="@id/tag_sign_val" android:singleLine="true"  android:text="今天dota开黑" style="@style/text_style_large_gray" android:layout_toRightOf="@id/tag_sign" android:layout_width="wrap_content"  android:layout_height="wrap_content" />
	    </RelativeLayout>
	       <ImageView android:background="@drawable/line" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	    <RelativeLayout  android:padding="20dp" android:layout_width="fill_parent" android:layout_height="wrap_content">

	        <TextView  android:id="@id/group_members" style="@style/text_style_large" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="群成员"        />
	        <TextView android:layout_marginLeft="10dp" android:id="@id/group_members_val" android:singleLine="true"  android:text="(15/30)" style="@style/text_style_large_gray" android:layout_toRightOf="@id/group_members" android:layout_width="wrap_content"  android:layout_height="wrap_content" />

	    	<GridView  android:horizontalSpacing="10dp"  android:id="@id/grid_view" android:layout_width="250dp" android:layout_height="50dp" android:columnWidth="50dp" android:numColumns="5" android:layout_below="@id/group_members_val">
	    	   
			</GridView>
			<ImageView  android:layout_width="wrap_content" android:layout_height="wrap_content"  android:src="@drawable/triangle" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
	  
	    </RelativeLayout>
    </LinearLayout>
    
    
    <TextView android:id="@+id/joinInTheRoom" android:onClick="true" android:layout_marginTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="加入该群" style="@style/text_style_big" android:textColor="@color/TextColorWhite" android:background="@drawable/button_long_green_bg" />
	<TextView android:layout_marginTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="投诉" style="@style/text_style_big" android:background="@drawable/button_long_white_bg"/>
    
</LinearLayout>
