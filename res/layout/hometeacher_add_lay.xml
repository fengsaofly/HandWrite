<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@id/accountTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/actionbar_bg" >

        <TextView
            android:id="@id/top_left_back_btn"
            style="@style/left_back_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="myOnclick"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:text="返回"
            android:visibility="visible" />

        <TextView
            android:id="@id/title"
            style="@style/text_style_big_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的设置" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/TextColorWhite"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@id/tag_addr"
                style="@style/text_style_big_gray"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="地址" />

            <TextView
                android:id="@id/tag_addr_val"
                style="@style/text_style_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tag_addr"
                android:text="四川 成都" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/BackgroundGrayColor" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@id/tag_subject"
                style="@style/text_style_big_gray"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="科目" />

            <TextView
                android:id="@id/tag_subject_val"
                style="@style/text_style_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tag_subject"
                android:text="语文" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@id/tag_grade"
                style="@style/text_style_big_gray"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="年级" />

            <TextView
                android:id="@id/tag_grade_val"
                style="@style/text_style_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tag_grade"
                android:text="高三" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@id/tag_phone"
                style="@style/text_style_big_gray"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="联系电话" />

            <TextView
                android:id="@id/tag_phone_val"
                style="@style/text_style_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tag_phone"
                android:text="13888888888" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@color/BackgroundGrayColor" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp" >

            <TextView
                android:id="@id/tag_detail_description"
                style="@style/text_style_big_gray"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="详细描述" />

            <TextView
                android:id="@id/tag_detail_description_val"
                style="@style/text_style_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tag_detail_description"
                android:text="我想找一个年轻貌美的老师..." />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@id/submit"
        style="@style/text_style_big_white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_long_green_bg"
        android:onClick="myOnClick"
        android:text="提交" />

</LinearLayout>