<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scan_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@anim/list_bg_selector" >


<TextView  android:id="@+id/contactitem_catalog" android:paddingRight="4.0dip" android:layout_height="wrap_content" style="@style/MMListCatalog" />


        <RelativeLayout
            android:layout_below="@id/contactitem_catalog"
            android:id="@+id/friendlink_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" 
            android:padding="5dp">

            <FrameLayout
                android:id="@+id/image"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/friend_icon"
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" 
					android:src="@drawable/default_avatar"/>
              
                    
            </FrameLayout>

            <TextView
                android:id="@+id/friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_toRightOf="@id/image"
                android:singleLine="true"
                android:text="用户名"
                android:textColor="#ff333333"
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/male_icon"
	    		android:drawablePadding="2dp" />
            <TextView 
			    android:layout_below="@id/friend_name" 
			    android:id="@id/distance_textview"
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
			    android:text="这是个性签名..."
			    android:gravity="left"
			    android:layout_marginTop="10dp"
			    android:layout_alignBottom="@id/list_item_icon"
			    android:layout_toRightOf="@id/image"
			    style="@style/list_item_time"
			    android:layout_marginLeft="10dp"/>
            
        </RelativeLayout>
    

</RelativeLayout>

