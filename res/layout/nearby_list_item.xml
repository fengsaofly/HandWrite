<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_margin="5dp"
   >

   <ImageView
        android:id="@id/list_item_icon"
        android:layout_width="50dp"
        android:layout_height="50.0dip"
        android:layout_gravity="center"
        android:src="@drawable/friend_icon_sample"
        android:scaleType="fitXY" />
	<TextView 
	    android:id="@+id/find_user"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="肖逸飞"
	    android:layout_marginLeft="5dp"
	    style="@style/list_item_name_text_style"
	    android:layout_toRightOf="@id/list_item_icon"
	    android:drawableRight="@drawable/male_icon"
	    android:drawablePadding="2dp"/>
	<TextView 
	    android:layout_below="@id/find_user" 
	    android:id="@id/distance_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:text="100米以内"
	    android:gravity="left"
	    android:layout_marginTop="10dp"
	    android:layout_alignBottom="@id/list_item_icon"
	    android:layout_toRightOf="@id/list_item_icon"
	    style="@style/list_item_time"
	    android:layout_marginLeft="5dp"/>

	
	<TextView 
	    android:id="@id/list_item_description"
	    android:layout_width="120dp"
	    android:layout_height="wrap_content"
	    android:text="不用看了，这就是我的个性签名..."
	    android:layout_below="@id/find_upload_img"
	    android:layout_alignParentRight="true"
	    android:layout_margin="5dp"
	    style="@style/listview_sign_text_style"
	    android:layout_centerInParent="true"/>

</RelativeLayout>
