<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:id="@id/record_pressbtn_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_input_lay_bg"
        android:orientation="horizontal"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="bottom|center_horizontal" 
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@id/chat_record_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_input_voice_btn_style"
                android:onClick="myOnclick" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center" >

            <EditText
                android:layout_margin="2dp"
                android:id="@id/chat_input_field"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_textview_bg" 
                android:maxHeight="100dp"
                android:hint="说点什么..."
                android:paddingLeft="3dp"
                style="@style/text_style_medium"
                android:gravity="center_vertical"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
              android:gravity="bottom|center_horizontal" 
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@id/chat_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_input_add_btn_style"
                android:clickable="true"
                android:onClick="myOnclick" />
        </RelativeLayout>
        <!--
                 <TextView
	            android:id="@id/record_pressbtn"
	            style="@style/DefaultTextStyle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="10dp"
	            android:background="@drawable/chat_textview_bg"
	            android:text="按住说话" />
        -->
    </LinearLayout>

    <include
        android:id="@+id/question_popup_layout"
        layout="@layout/question_popup_layout"
        android:visibility="gone" />

</LinearLayout>